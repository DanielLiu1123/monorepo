<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="Postgres">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="beginningDelimiter" value='"'/>
        <property name="endingDelimiter" value='"'/>
        <property name="autoDelimitKeywords" value='true'/>

        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="monorepo.lib.mybatis.plugin.NullableColumnPlugin"/>
        <plugin type="monorepo.lib.mybatis.plugin.DeprecatedColumnsPlugin"/>
        <plugin type="monorepo.lib.mybatis.plugin.DisableGeneratedMapperMethodsPlugin"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="org.postgresql.Driver"
                        connectionURL="jdbc:postgresql://localhost:5432/todo"
                        userId="root" password="root">
        </jdbcConnection>

        <javaTypeResolver type="monorepo.lib.mybatis.typeresolver.MonorepoJavaTypeResolver">
            <property name="forceBigDecimals" value="true"/>
            <!-- https://mybatis.org/generator/configreference/javaTypeResolver.html -->
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator
                targetProject="src/main/java"
                targetPackage="monorepo.services.todo.entity">
        </javaModelGenerator>

        <javaClientGenerator
                targetProject="src/main/java"
                targetPackage="monorepo.services.todo.mapper">
            <property name="rootInterface" value="org.mybatis.dynamic.sql.util.mybatis3.CommonSelectMapper"/>
        </javaClientGenerator>

        <!-- Don't comment on the table below!! Generate every time to ensure that the code and table structure are synchronized -->
        <table tableName="todo">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
            <columnOverride column="state" javaType="monorepo.proto.todo.v1.Todo.State"
                            typeHandler="monorepo.services.todo.entity.typehandler.TodoStateTypeHandler"/>
            <columnOverride column="priority" javaType="monorepo.proto.todo.v1.Todo.Priority"
                            typeHandler="monorepo.services.todo.entity.typehandler.TodoPriorityTypeHandler"/>
        </table>
        <table tableName="todo_subtask">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
        </table>

    </context>
</generatorConfiguration>
