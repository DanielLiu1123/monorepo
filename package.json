{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise monorepo with multi-language microservices",
  "workspaces": [
    "apps/admin",
    "apps/admin-bff",
    "apps/mobile",
    "apps/mobile-bff",
    "apps/web",
    "apps/web-bff",
    "packages/ui-components"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "proto": "make proto",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.3",
    "prettier": "^3.6.2",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.10.0",
    "npm": ">=11.6.0"
  },
  "packageManager": "npm@11.6.0"
}
